@using System.Globalization
@{
    ViewBag.Title = "OTMO Foodtruck";
}

<div class="carouselContainer">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item active">
                <a href="/Annexes/Stationnement">
                    <img src="/Content/slide-stationnement.jpg" alt="Stationnements du Foodtruck OTMO" style="width:100%;">
                </a>
            </div>
            <div class="item">
                <a href="/Annexes/foodtruck_equilibre">
                    <img src="/Content/slide-article.jpg" alt="C'est quoi un foodtruck ?" style="width:100%;">
                </a>
            </div>
            <div class="item">
                <a href="/Article">
                    <img src="/Content/slide-promos.jpg" alt="Nos promotions en cours" style="width:100%;">
                </a>
            </div>
        </div>
        <a class="left carousel-control-prev carousel-control" href="#myCarousel" data-slide="prev">
            <span class="fa fa-chevron-left fa-2x"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control-next carousel-control" href="#myCarousel" data-slide="next">
            <span class="fa fa-chevron-right fa-2x"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<h2>Nos produits stars !</h2>
<section id="bestsellers">
    @foreach (var article in ViewBag.Articles.listeArticles)
    {
        <div>
            <a href="/Article/Details/@article.Id">
                <img src="/Content/@article.Image" alt="@article.Nom" />
            </a>
            <div class="articleDescription">
                <a href="/Article/Details/@article.Id">
                    <p>@article.Nom</p><p>@article.Prix.ToString("C2", new CultureInfo("fr-FR"))</p>
                </a>
            </div>
            <a href="/Panier/Ajouter/@article.Id" class="ajoutPanier">
                <p class="ajoutPanier">Ajouter au panier</p>
            </a>
        </div>
    }
</section>

